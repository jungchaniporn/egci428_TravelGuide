<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mapRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapActivity">

    <ImageView
        android:id="@+id/thaiMap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_thai_map" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/northeastConstrintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/northeastText"
            android:layout_width="124dp"
            android:layout_height="45dp"
            app:layout_constraintLeft_toLeftOf="@+id/northeast_left_guideline"
            app:layout_constraintTop_toTopOf="@+id/northeast_top_guideline"
            android:background="@color/common_google_signin_btn_text_light_focused"
            android:gravity="center"
            android:text="Northeast"
            android:textColor="#ffffffff"
            android:textSize="18sp" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/northeast_top_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.25" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/northeast_left_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.55" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/westConstrintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/westText"
            android:layout_width="115dp"
            android:layout_height="47dp"
            app:layout_constraintLeft_toLeftOf="@+id/west_left_guideline"
            app:layout_constraintTop_toTopOf="@+id/west_top_guideline"
            android:background="@color/common_google_signin_btn_text_light_focused"
            android:gravity="center"
            android:text="West"
            android:textColor="#ffffffff"
            android:textSize="18sp" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/west_top_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.4" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/west_left_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/eastConstrintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/eastText"
            android:layout_width="115dp"
            android:layout_height="47dp"
            app:layout_constraintLeft_toLeftOf="@+id/east_left_guideline"
            app:layout_constraintTop_toTopOf="@+id/east_top_guideline"
            android:background="@color/common_google_signin_btn_text_light_focused"
            android:gravity="center"
            android:text="East"
            android:textColor="#ffffffff"
            android:textSize="18sp" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/east_top_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.46" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/east_left_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.4" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/southConstrintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/southText"
            android:layout_width="115dp"
            android:layout_height="47dp"
            app:layout_constraintLeft_toLeftOf="@+id/south_left_guideline"
            app:layout_constraintTop_toTopOf="@+id/south_top_guideline"
            android:background="@color/common_google_signin_btn_text_light_focused"
            android:gravity="center"
            android:text="South"
            android:textColor="#ffffffff"
            android:textSize="18sp" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/south_top_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.76" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/south_left_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.16" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/centralConstrintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/centralText"
            android:layout_width="115dp"
            android:layout_height="47dp"
            android:background="@color/common_google_signin_btn_text_light_focused"
            android:gravity="center"
            android:text="Central"
            android:textColor="#ffffffff"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="@+id/central_left_guideline"
            app:layout_constraintTop_toTopOf="@+id/central_top_guideline" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/central_top_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.30" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/central_left_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.25" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/northConstrintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/northText"
            android:layout_width="115dp"
            android:layout_height="47dp"
            android:background="@color/common_google_signin_btn_text_light_focused"
            android:gravity="center"
            android:text="North"
            android:textColor="#ffffffff"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="@+id/north_left_guideline"
            app:layout_constraintTop_toTopOf="@+id/north_top_guideline" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/north_top_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.09" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/north_left_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.15" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>